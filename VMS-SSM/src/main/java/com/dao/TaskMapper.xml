<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.TaskDao">

<!--    按查勘员id查找查勘任务-->
   <select id="selectTaskById" parameterType="java.lang.String" resultType="com.po.Task">
       select * from task where surveyor_id=#{id}
   </select>
<!--    按任务id从数据库删除已完成任务-->
    <delete id="deleteTaskById" parameterType="java.lang.Integer">
        delete from task where id=#{id}
    </delete>

</mapper>